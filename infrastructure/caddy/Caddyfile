# Caddy reverse proxy for arthurshafer.com demo hosting
# Each demo gets a path prefix that routes to its Docker Compose stack
#
# To add a new demo:
# 1. Deploy its docker-compose stack on unique ports
# 2. Add a handle_path block below
# 3. Run: sudo systemctl reload caddy

arthurshafer.com {
    # Tulare County AI Chatbot Demo
    handle_path /AI_Chatbot_Virtual_Assistant_Solutions_for_Tulare_County* {
        reverse_proxy localhost:3001
    }

    # Future demos go here:
    # handle_path /another-demo* {
    #     reverse_proxy localhost:3002
    # }

    # Default — serve existing site or a landing page
    handle {
        respond "Arthur Shafer — Government Contracting" 200
    }
}
